<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_bg"
    android:layoutDirection="ltr"
    tools:context="com.example.firozsaifi.azoolp.activity.LoginActivity">


    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="30dp"
            android:layout_marginTop="80dp"
            android:scaleType="centerInside"
            android:src="@drawable/azool_logo_60" />

        <ImageView
            android:id="@+id/menu_btn"
            android:layout_width="@dimen/btn_back_length"
            android:layout_height="@dimen/btn_back_length"
            android:layout_alignParentStart="true"
            android:layout_margin="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_arrow_back_black_24dp" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logo_layout"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <!--  <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            app:cardBackgroundColor="@color/blue"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_horizontal"
                android:text="DEALER"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_size_medium"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="times"
            android:text="Dealer Login"
            android:textAlignment="center"
            android:textSize="@dimen/txt_size_large"/>

        <EditText
            android:id="@+id/etxt_uname_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/txt_border_rectangle"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_user_hint"
            android:gravity="center_vertical"
            android:hint="Username"
            android:inputType="textEmailAddress|textNoSuggestions"
            android:padding="5dp"
            android:textSize="@dimen/txt_size_small" />

        <EditText
            android:id="@+id/etxt_upass_login"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:background="@drawable/txt_border_rectangle"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_password_hint"
            android:gravity="center_vertical"
            android:hint="Password"
            android:inputType="textPassword|textNoSuggestions"
            android:padding="5dp"
            android:textSize="@dimen/txt_size_small" />

        <TextView
            android:id="@+id/txt_forgotpass_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="@dimen/margin_medium"
            android:padding="5dp"
            android:text="Forgot password?"
            android:textSize="@dimen/txt_size_small" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selecter_btn_red"
            android:text="LOGIN"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_small" />

    </LinearLayout>


</RelativeLayout>
