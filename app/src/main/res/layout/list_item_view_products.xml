<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_cards_grey"
    android:padding="5dp"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BMW 1 Year Old. Excellent Condition"
            android:textStyle="bold"
            android:textSize="@dimen/txt_size_medium"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_product_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_ads_item"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/grey_light"
                android:scaleType="fitXY"
                android:src="@drawable/img_spare_part" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="80,000 AED"
                    android:textStyle="bold"
                    android:textSize="@dimen/txt_size_medium" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/accident_car_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_brand"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_brand" />

                    <TextView
                        android:id="@+id/txt_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_brand"
                        android:layout_centerVertical="true"
                        android:text="Lexus"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/img_model"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_model" />

                    <TextView
                        android:id="@+id/txt_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="0dp"
                        android:layout_toEndOf="@id/img_model"
                        android:layout_centerVertical="true"
                        android:text="IS"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="2dp">

                    <ImageView
                        android:id="@+id/img_year"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_calender" />

                    <TextView
                        android:id="@+id/txt_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_year"
                        android:layout_centerVertical="true"
                        android:text="2011"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/spare_part_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:id="@+id/main_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_maincat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_cat_main" />

                    <TextView
                        android:id="@+id/txt_cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_maincat"
                        android:text="Body Part"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

              <!--  <RelativeLayout
                    android:id="@+id/sub_cat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toEndOf="@id/main_cat">

                    <ImageView
                        android:id="@+id/img_subcat"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_cat_sub" />

                    <TextView
                        android:id="@+id/txt_subcat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_subcat"
                        android:text="Bumper"
                        android:textSize="@dimen/txt_size_medium" />

                </RelativeLayout>-->

            </RelativeLayout>

            <!--
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />
-->

            <LinearLayout
                android:id="@+id/description_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="I need bumper"
                    android:textSize="@dimen/txt_size_small" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/img_edit"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:src="@drawable/edit" />

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_toEndOf="@+id/img_edit"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/delete" />

                <TextView
                    android:id="@+id/txt_views"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Views 25"
                    android:textSize="@dimen/txt_size_small"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:text="Aug 9, 2018"
                    android:textSize="@dimen/txt_size_small" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>