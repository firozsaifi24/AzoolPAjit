<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layoutDirection="ltr"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_shop_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_cards_grey"
        android:orientation="horizontal"
        android:padding="1dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_ads_item"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@color/white"
                android:scaleType="fitXY"
                android:src="@drawable/img_spare_part" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_customer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="George billy"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_size_small" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:background="@color/grey_very_light"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="2dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/img_brand"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_brand" />

                    <TextView
                        android:id="@+id/txt_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img_brand"
                        android:text="Lexus"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/img_model"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_model" />

                    <TextView
                        android:id="@+id/txt_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img_model"
                        android:text="IS"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="2dp">

                    <ImageView
                        android:id="@+id/img_year"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_calender" />

                    <TextView
                        android:id="@+id/txt_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/img_year"
                        android:text="2011"
                        android:textSize="@dimen/txt_size_small" />

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/txt_show_more"
                    android:paddingStart="10dp"
                    android:text="I need bumperasdfa asdf  asf as df"
                    android:singleLine="true"
                    android:paddingEnd="10dp"
                    android:textSize="@dimen/txt_size_small" />

                <TextView
                    android:id="@+id/txt_show_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/border_show_more"
                    android:clickable="true"
                    android:padding="5dp"
                    android:text="Show More"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_very_small" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginEnd="3dp"
                android:background="@color/grey_very_light"
                android:gravity="center"
                android:padding="2dp">

                <ImageView
                    android:id="@+id/img_call"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_phone_green_100dp" />

                <TextView
                    android:id="@+id/txt_call"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_toEndOf="@+id/img_call"
                    android:gravity="center_vertical"
                    android:text="+971507844501"
                    android:textAlignment="center"
                    android:textSize="@dimen/txt_size_small" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>