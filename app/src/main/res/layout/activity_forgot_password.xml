<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="ltr"
    android:background="@drawable/register_bg"
    tools:context=".activity.ForgotPasswordActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/menu_btn"
                android:layout_width="@dimen/btn_back_length"
                android:layout_height="@dimen/btn_back_length"
                android:layout_alignParentStart="true"
                android:layout_margin="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_arrow_back_black_24dp" />

            <RelativeLayout
                android:id="@+id/logo_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:padding="30dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/azool_logo_60" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/content_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo_layout"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Password"
                    android:layout_marginTop="10dp"
                    android:textColor="#646464"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:fontFamily="monospace"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/etxt_email_reset"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/txt_border_rectangle"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/ic_email_hint"
                    android:gravity="center_vertical"
                    android:hint="Enter Email Address"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:padding="5dp"
                    android:textSize="@dimen/txt_size_small" />

                <Button
                    android:id="@+id/btn_reset"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/selecter_btn_red"
                    android:text="RESET"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_size_small" />


            </LinearLayout>

        </RelativeLayout>

</RelativeLayout>